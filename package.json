{
  "name": "gmail2gdrive",
  "version": "2.0.0",
  "description": "Gmail2GDrive is a Google Apps Script which automatically stores and sorts Gmail attachments into Google Drive folders, and can also save the thread as a PDF file.",
  "scripts": {
    "build": "npm run build-lib && npm run build-examples",
    "build-lib": "scripts/build-lib.sh && npm run generate-schema",
    "build-examples": "scripts/build-examples.sh",
    "clean": "rm -rf build",
    "format": "prettier -w .",
    "generate-schema": "npm run generate-schema-v1 && npm run generate-schema-v2",
    "generate-schema-v1": "scripts/gen-schema.sh V1Config v1 'Config (v1)'",
    "generate-schema-v2": "scripts/gen-schema.sh Config v2 'Config (v2)'",
    "lint-config": "npm run lint-config-v1 && npm run lint-config-v2",
    "lint-config-v1": "npx ajv validate -s schema-v1.json -d gas-examples/config-v1*.json --verbose",
    "lint-config-v2": "npx ajv validate -s schema-v2.json -d gas-examples/config-v2*.json --verbose",
    "lint": "npx eslint . && npm run lint-config",
    "login": "cd gas && clasp login",
    "pre-commit": "npm run clean && npm run build && npm run test && npm run format && npm run lint",
    "push": "npm run push-lib && npm run push-examples",
    "push-examples": "cd build/gas/examples && clasp push -f",
    "push-lib": "cd build/gas/lib && clasp push -f",
    "redeploy": "npm run pre-commit && npm run push",
    "test": "jest --silent --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahochsteger/gmail2gdrive.git"
  },
  "keywords": [
    "gmail",
    "gdrive",
    "email",
    "attachment",
    "pdf"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/chai": "^4.3.4",
    "@types/dateformat": "^5.0.0",
    "@types/google-apps-script": "^1.0.59",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-jsdoc": "^40.1.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "gas-webpack-plugin": "^2.3.0",
    "jest": "^29.5.0",
    "jest-junit": "^15.0.0",
    "jest-mock-extended": "^3.0.4",
    "json-schema-defaults": "^0.4.0",
    "json-schema-to-typescript": "^12.0.0",
    "node-jq": "^2.3.5",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "typescript-json-schema": "^0.55.0",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "wetzel": "^0.2.3"
  },
  "private": true,
  "dependencies": {
    "class-transformer": "^0.5.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "reflect-metadata": "^0.1.13",
    "relative-time-parser": "^1.0.15"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
