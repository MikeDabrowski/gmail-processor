{
  "name": "gmail2gdrive",
  "version": "2.0.0",
  "description": "Gmail2GDrive is a Google Apps Script which automatically stores and sorts Gmail attachments into Google Drive folders, and can also save the thread as a PDF file.",
  "scripts": {
    "build": "concurrently 'npm run build:lib' 'npm run build:examples'",
    "build:examples": "scripts/build-gas.sh examples",
    "build:lib": "scripts/build-gas.sh lib",
    "ci": "npm run ci:build",
    "ci:build": "npm ci && npm run build",
    "ci:test": "jest --ci --reporters='github-actions'",
    "ci:test:github": "jest --ci --reporters='default' --reporters='.github/github-actions-reporter.js'",
    "clasp:push:examples": "scripts/clasp.sh examples push",
    "clasp:push:lib": "scripts/clasp.sh lib push",
    "clasp:push": "npm run clasp:push:lib && npm run clasp:push:examples",
    "clasp:push:concurrently": "concurrently 'npm run clasp:push:lib' 'npm run clasp:push:examples'",
    "clasp:repush": "npm run build:pre-commit && npm run clasp:push",
    "clean": "rm -rf build",
    "deploy": "concurrently 'npm run deploy:lib' 'npm run deploy:examples'",
    "deploy:examples": "scripts/clasp.sh examples deploy",
    "deploy:lib": "scripts/clasp.sh lib deploy",
    "github:secrets:list": "gh secret list",
    "github:secrets:update": "gh secret set -f .env",
    "github:test:push": "act push",
    "lint": "concurrently 'npm run lint:code' 'npm run lint:config'",
    "lint:code": "eslint .",
    "lint:config": "scripts/lint-config.sh",
    "lint:fix": "prettier -w .",
    "pre-commit": "npm run clean && npm run update && npm run build && npm run lint:fix && npm run lint && npm run test",
    "test": "jest --reporters=summary --silent",
    "test:verbose": "jest --detectOpenHandles --reporters='default' --runInBand --verbose",
    "update": "concurrently 'npm run update:examples' 'npm run update:schema'",
    "update:examples": "scripts/update-examples.sh",
    "update:schema": "scripts/update-schema.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahochsteger/gmail2gdrive.git"
  },
  "keywords": [
    "gmail",
    "gmail2gdrive",
    "gdrive",
    "email",
    "attachment",
    "pdf"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/dateformat": "^5.0.0",
    "@types/google-apps-script": "^1.0.64",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.8",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "gas-webpack-plugin": "^2.5.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "typescript-json-schema": "^0.56.0",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1"
  },
  "private": true,
  "dependencies": {
    "ajv": "^8.12.0",
    "class-transformer": "^0.5.1",
    "moment-timezone": "^0.5.43",
    "reflect-metadata": "^0.1.13",
    "type-fest": "^3.10.0"
  },
  "engines": {
    "node": ">=18"
  }
}
